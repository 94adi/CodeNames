@model CodeNames.Models.ViewModels.GameRoomVM

<form method="post">
    <div class="row p-3 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-12 border-bottom">
            <h2 class="text-primary">@Model.PageTitle</h2>
        </div>
        <div class="col-8 pt-4">
            @if (Model.GameRoomId.HasValue)
            {
                <input type="hidden" asp-for="GameRoomId.Value" />
            }
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="@Model.GameRoom.Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="@Model.GameRoom.Name" class="form-control" />
                    <span asp-validation-for="@Model.GameRoom.Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-8 offset-4">
                        <div class="row">
                            <div class="col">
                                <button type="submit" class="btn btn-primary form-control" asp-route-id="@Model">@Model.ActionButtonName</button>
                            </div>
                            <div class="col">
                                <a asp-action="Index" class="btn btn-success form-control">Back to List</a>
                            </div>
                        </div>
                </div>
            </div>
        </div>
    </div>
</form>