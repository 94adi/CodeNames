@model CodeNames.Models.LiveSessionModel;

<div class="container text-center">

    @for(int i = 0; i < Model.Grid.Rows; i++)
    {
        <div class="row border p-1 mt-3">
            @for(int j = 0; j < Model.Grid.Columns; j++)
            {
                int rowIndex = i * Model.Grid.Columns;
                string color = $"background-color:{ViewBag.ColorDictionary[@Model.Grid.Blocks[rowIndex + j].Color]}";
                <div class="col-2">
                    <div class="card mb-3" style="max-width: 18rem; @color">
                        <div class="card-body">
                            <h5 class="card-title">@Model.Grid.Blocks[rowIndex + j].Content</h5>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

</div>